<?xml version="1.0"?>
<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:include filename="$(find mapping_bot)/urdf/my_robot.gazebo"/>

  <link name="base_link"></link>

  <joint name="base_link_joint" type="fixed">
    <origin xyz="0 0 0.11" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="chassis"/>
  </joint>

  <link name="chassis">
    <pose>0 0 0.11 0 0 0</pose>

    <inertial>
      <mass value="20.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
          ixx="0.0542" ixy="0" ixz="0"
          iyy="0.1667" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name="chassis_collision">
      <origin xyz="0 0 0" rpy="0 0 0"/> 
      <geometry>
        <box size=".3 .15 .1"/>
      </geometry>
    </collision>

    <visual name="chassis_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size=".3 .15 .1"/>
      </geometry>
    </visual>
  </link>

  <joint type="continuous" name="front_left_wheel_joint">
    <origin xyz="0.1 0.11 -0.04" rpy="-1.5707 0 0"/>
    <child link="front_left_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 0 1" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <link name="front_left_wheel">
    <inertial>
      <mass value="3.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
          ixx="0.0049" ixy="0" ixz="0"
          iyy="0.0049" iyz="0"
          izz="0.0074"
      />
    </inertial>

    <collision name="front_left_wheel_collision">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.07" length="0.07"/>
      </geometry>
    </collision>

    <visual name="front_left_wheel_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.07" length="0.07"/>
      </geometry>
    </visual>
  </link>

  <joint type="continuous" name="front_right_wheel_joint">
    <origin xyz="0.1 -0.11 -0.04" rpy="-1.5707 0 0"/>
    <child link="front_right_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 0 1" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <link name="front_right_wheel">
    <inertial>
      <mass value="3.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
          ixx="0.0031" ixy="0" ixz="0"
          iyy="0.0031" iyz="0"
          izz="0.0038"
      />
    </inertial>

    <collision name="front_right_wheel_collision">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.07" length="0.07"/>
      </geometry>
    </collision>

    <visual name="front_right_wheel_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.07" length="0.07"/>
      </geometry>
    </visual>
  </link>

  <joint type="continuous" name="back_left_wheel_joint">
    <origin xyz="-0.1 0.11 -0.04" rpy="-1.5707 0 0"/>
    <child link="back_left_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 0 1" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <link name="back_left_wheel">
    <inertial>
      <mass value="3.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
          ixx="0.0031" ixy="0" ixz="0"
          iyy="0.0031" iyz="0"
          izz="0.0038"
      />
    </inertial>

    <collision name="back_left_wheel_collision">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.07" length="0.07"/>
      </geometry>
    </collision>

    <visual name="back_left_wheel_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.07" length="0.07"/>
      </geometry>
    </visual>
  </link>

  <joint type="continuous" name="back_right_wheel_joint">
    <origin xyz="-0.1 -0.11 -0.04" rpy="-1.5707 0 0"/>
    <child link="back_right_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 0 1" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <link name="back_right_wheel">
    <inertial>
      <mass value="3.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
          ixx="0.0031" ixy="0" ixz="0"
          iyy="0.0031" iyz="0"
          izz="0.0038"
      />
    </inertial>

    <collision name="back_right_wheel_collision">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.07" length="0.07"/>
      </geometry>
    </collision>

    <visual name="back_right_wheel_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.07" length="0.07"/>
      </geometry>
    </visual>
  </link>

  <joint type="fixed" name="camera_joint">
    <origin xyz="0.135 0 0" rpy="0 0 0"/>
    <child link="camera"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
  </joint>

  <link name="camera">
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <box_inertia m="0.1" x="0.04" y="0.04" z="0.04"/>
      <inertia
          ixx="1e-6" ixy="0" ixz="0"
          iyy="1e-6" iyz="0"
          izz="1e-6"
      />
    </inertial>

    <collision name="camera_collision">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.04 0.04 0.04"/>
      </geometry>
    </collision>

    <visual name="camera_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.04 0.04 0.04"/>
      </geometry>
    </visual>
  </link>

  <joint type="fixed" name="camera_optical_joint">
    <origin xyz="0 0 0" rpy="-1.5707 0 -1.5707"/>
    <parent link="camera"/>
    <child link="camera_optical"/>
  </joint>

  <link name="camera_optical">
  </link>

  <joint type="fixed" name="hokuyo_joint">
    <origin xyz="0.08 0 0.08" rpy="0 0 0"/>
    <child link="hokuyo"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
  </joint>

  <link name="hokuyo">
    <inertial>
      <mass value="1e-5"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <box_inertia m="0.1" x="0.05" y="0.05" z="0.05"/>
      <inertia
          ixx="1e-6" ixy="0" ixz="0"
          iyy="1e-6" iyz="0"
          izz="1e-6"
      />
    </inertial>

    <collision name="hokuyo_collision">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>

    <visual name="hokuyo_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://mapping_bot/meshes/hokuyo.dae"/>
      </geometry>
    </visual>
  </link>

  <!-- Colors -->
  <gazebo reference="chassis">
      <material>Gazebo/LightGrey</material>
  </gazebo>

  <gazebo reference="front_left_wheel">
      <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="front_right_wheel">
      <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="back_left_wheel">
      <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="back_right_wheel">
      <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="camera">
      <material>Gazebo/Green</material>
  </gazebo>
</robot>
